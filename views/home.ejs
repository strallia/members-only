<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Home</title>
  <style>
    .message {
      background-color: lightgray;
    }
  </style>
</head>
<body>
  <h1>Members Only</h1>
  <h3>Home Page</h3>
  <% locals.messages.forEach((message) => { %>
    <% const { first, last, title, time, text } = message; %>
    <div class="message">
      <span>
        <% if (currentUser) { %>
          <%= first %> <%= last %> commented at <%= time %>
        <% } else { %>
          <strong>Hidden Author</strong> commented at <strong>Hidden Date</strong> 
        <% } %>
      </span>
      <p><%= title %></p>
      <p>text: <%= text %></p>
    </div>
  <% }) %>
  <a href="form/signup"><button>Signup</button></a>
  <a href="form/login"><button>Login</button></a>
  <a href="form/upgrade"><button>Upgrade Role</button></a>
  <a href="form/new-message"><button>Add a Message</button></a>
  <% if (currentUser) { %>
    <h1>Welcome, <%= currentUser.first %> <%= currentUser.last %>!</h1>
    <p>Your email: <%= currentUser.email %></p>
    <p>Role: <%= currentUser.role %></p>
  <% } else { %>
    <p>Please log in to access more features.</p>
  <% } %>
</body>
</html>